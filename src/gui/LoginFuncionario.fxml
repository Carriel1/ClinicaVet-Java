<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="gui.LoginFuncionarioController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Login do Funcionário" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    <TextField fx:id="txtUsername" promptText="Usuário" />
    <PasswordField fx:id="txtPassword" promptText="Senha" />
    
    <Button text="Entrar" onAction="#onBtLoginAction"/>
    <Button text="Cancelar" onAction="#onBtCancelAction"/>
    <Label fx:id="lblError" textFill="red" visible="false" />
</VBox>
