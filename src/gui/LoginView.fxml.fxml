<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginControllerForm">
    <children>
        <Label style="-fx-font-size: 24px;" text="Login" />
        
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Usuário:" />
            <TextField fx:id="usernameField" promptText="Digite seu usuário" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Senha:" />
            <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="160.0" promptText="Digite sua senha" />
        </HBox>

        <Button onAction="#handleLoginAction" text="Entrar" />

        <Label fx:id="errorLabel" textFill="RED" visible="false" />
    </children>
</VBox>
